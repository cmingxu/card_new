  .r_bt
    .r_bt_l
      .r_bt_l_a
      .r_bt_l_c.fb.white 时段价格列表
    .r_bt_r
      %button.submit2.hand{:onclick => "window.location.href='/period_prices/new'", :type => "button"} 创建时段
  .table
    %ul.bttitle.black.fb
      %li.w5 编号
      %li.w10 名称
      %li.w10 时段类型
      %li.w10 开始时间
      %li.w10 结束时间
      %li.w10 价格
      %li.w15 说明
      %li.w15 操作
    - @period_prices.each_with_index do |period_price,index|
      %ul.table_items
        %li.w5= index + 1
        %li.w10= period_price.name
        %li.w10= display_period_price_type_desc(period_price.period_type)
        %li.w10
          = period_price.start_time
          \:00
        %li.w10
          = period_price.end_time
          \:00
        %li.w10= period_price.price
        %li.w15= period_price.description
        %li.w15
          = link_to '查看', period_price
          |
          %a{:href => "/period_prices/#{period_price.id}/edit"} 修改
          - if period_price.card_period_prices.blank?
            |
            \#{link_to '删除', period_price, :confirm => '确定删除吗?', :method => :delete}
  .h10
  .pages
    = will_paginate @period_prices
  .h10
